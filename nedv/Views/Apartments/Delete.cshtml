@model nedv.Models.Data.Apartment

@{
    ViewData["Title"] = "Удаление";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Apartments" asp-action="Index">Объявления</a></li>
        <li class="breadcrumb-item active">Удаление</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Удаление объявления
</h3>
<div>
    <h4>Объявление</h4>
    <hr />
<div class="details_img_description">
    <img class="details_img" src="@Html.DisplayFor(model => model.ImgUrl)" alt="Image 1">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountRoom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountRoom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumberOfSquareMeters)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumberOfSquareMeters)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Floor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Floor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdType.AdTypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeOfConstruction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeOfConstruction.TypeOfConstructionName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City.CityName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Name)
            </dd>
        </dl>
    </div>
</div>
    <br />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
